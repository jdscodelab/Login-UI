<Application x:Class="LoginUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoginUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <!--Animation on page display-->
        <Style TargetType="{x:Type Page}">
            <Style.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard Storyboard.TargetProperty="Margin" SpeedRatio="5">
                            <ThicknessAnimation>
                                <ThicknessAnimation.From>
                                    <!--to slide from bottom to top-->
                                    <Thickness 
                                        Left="0"
                                        Top="0"
                                        Bottom="-525"
                                        Right="0"/>
                                </ThicknessAnimation.From>
                                <ThicknessAnimation.To>
                                    <!--to slide from bottom to top-->
                                    <Thickness 
                                        Left="0"
                                        Top="0"
                                        Bottom="0"
                                        Right="0"/>
                                </ThicknessAnimation.To>
                            </ThicknessAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        
